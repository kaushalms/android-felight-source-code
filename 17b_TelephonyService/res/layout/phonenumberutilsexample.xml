<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android.setVerticalScrollBarEnabled="true"
    android:background="#000000"
    android:gravity="center_horizontal"
    android:padding="10px" >

    <TextView
        android:id="@+id/intro_label_pn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15px"
        android:layout_marginLeft="10px"
        android:text="PhoneNumberUtils Example"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/label_pninput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro_label_pn"
        android:layout_marginBottom="5px"
        android:layout_marginLeft="10px"
        android:text="Input string to format:" />

    <EditText
        android:id="@+id/pninput"
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_pninput"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="10px"
        android:text="" />

    <Button
        android:id="@+id/pnformat"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/pninput"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="10px"
        android:text="Format" />

    <TextView
        android:id="@+id/label_pnoutput"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/pnformat"
        android:layout_marginBottom="5px"
        android:layout_marginLeft="10px"
        android:text="Formatting Results:" />

    <TextView
        android:id="@+id/pnoutput"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_pnoutput"
        android:layout_marginBottom="25px"
        android:layout_marginLeft="10px"
        android:text="" />

</RelativeLayout>